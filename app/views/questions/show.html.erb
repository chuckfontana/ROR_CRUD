<div class="container">
  <div class="card card-body bg-light">
    <div class="media">
      <div style="margin: 0 10px 0 0">
        <a href="#">
          <img class="media-object" src="<%= @question.gravatar %>" />
        </a>
      </div>
      <div class="media-body">
        <div>
          <h2><%= @question.email %> asked:</h2>
          <h4><%= @question.body %></h4>
          <div><%= time_ago_in_words @question.created_at %> ago</div>
        </div>
      </div>
    </div>
  </div>
</div>

<br />
<div class="container">
  <div class="row">
    <div class="col-2">&nbsp</div>
    <div class="col">
      <div>
        <button
          type="button"
          class="btn btn-success btn-sm"
          data-toggle="modal"
          data-target="#new-answer-modal"
        >
          Submit new answer
        </button>
      </div>
      <br />
      <% @answers.each do |a| %>
      <div class="media">
        <div style="margin: 0 10px 0 0">
          <a href="#">
            <img class="media-object" src="<%= a.gravatar %>" />
          </a>
        </div>
        <div class="media-body">
          <div>
            <h4><%= a.email %> answered:</h4>
            <%= a.body %>
            <div><%= time_ago_in_words a.created_at %> ago</div>
          </div>
        </div>
        <br />
      </div>
      <br />
      <% end %>
    </div>
  </div>
  <% if @answers.empty? %>
  <div class="alert alert-info">Nothing here yet, be the first to answer?</div>
  <% end %>
</div>

<%= render 'home/new_answer_form' %>
